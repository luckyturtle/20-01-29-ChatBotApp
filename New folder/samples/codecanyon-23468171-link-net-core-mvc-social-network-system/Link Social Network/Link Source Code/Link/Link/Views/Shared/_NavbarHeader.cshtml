@inject SignInManager<ApplicationUser> SignInManager


<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">

                <img src="~/images/logo.png" class="logo" height="31" />
            </a>
        </div>

        <div class="navbar-collapse collapse">
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="col-sm-4 col-md-5">
                    <form method="post" asp-controller="Comments" asp-action="FindComments" enctype="multipart/form-data">

                        <div class="input-group" style="margin-top:7px; padding-left: 19px;">
                            <input type="text" class="form-control main-search" id="MainContian" name="MainContian" placeholder="Find Comments" />
                            <div class="input-group-btn">
                                <div class="btn-group" role="group">
                                    <div class="dropdown dropdown-lg ">
                                        <button type="button" class="btn btn-default dropdown-toggle main-search-dropdown-btn" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                                        <div class="dropdown-menu dropdown-menu-right main-search-dropdown-menu" role="menu">
                                            <div class="form-horizontal">
                                                <div class="form-group">
                                                    <label for="contain">Created By:</label>
                                                    <input type="text" id="CreateBy" name="CreateBy" class="form-control" placeholder=" Filter by comments creator name " autocomplete="off" />
                                                </div>
                                                <div class="form-group">
                                                    <label for="contain">Contain:</label>
                                                    <input type="text" id="Contain" name="Contain" class="form-control" placeholder=" Filter by comments content " autocomplete="off" />
                                                </div>
                                                <div class="form-group">
                                                    <label for="contain">From Date:</label>
                                                    <input class="form-control" id="FromDate" name="FromDate" placeholder="MM/dd/yyyy" type="date">
                                                </div>
                                                <div class="form-group">
                                                    <label for="contain">To Date:</label>
                                                    <input class="form-control" id="ToDate" name="ToDate" placeholder="MM/dd/yyyy" type="date">
                                                </div>
                                                <div class="form-group">
                                                    <label for="contain">Group Name:</label>
                                                    <input id="Group" name="Group" type="text" class="form-control" placeholder=" Filter by group name" autocomplete="off" />
                                                </div>
                                                <button class="btn btn-primary btn-block" type="submit">
                                                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            }
            @await Html.PartialAsync("_LoginPartial")
            @if (SignInManager.IsSignedIn(User))
            {
                <ul class="nav navbar-nav navbar-right">

                    <li class="dropdown" id="notifications-item">
                        <a href="#" onclick="refreshNotificationItems();return false;" class="dropdown-toggle" data-toggle="dropdown">
                            <span class=" fa fa-bell"></span> <span class="label label-success notification-num" id="main-notification-num">0</span>
                        </a>
                        <ul id="general-notification-list" class="dropdown-menu notification-list" role="menu"></ul>
                    </li>



                    <li class="dropdown" id="chat-notifications-item">
                        <a href="#" onclick="refreshChatItems();return false;" class=" dropdown-toggle" data-toggle="dropdown">
                            <span class="fa fa-comment "></span> <span class="label btn-danger chat-notification-num" id="main-chat-notification-num">0</span>
                        </a>
                        <ul id="chat-notification-list" class="dropdown-menu notification-list " role="menu"></ul>
                    </li>

                    <li class="dropdown" id="follower-notifications-item">
                        <a href="#" onclick="refreshFollowers();return false;" class=" dropdown-toggle" data-toggle="dropdown">
                            <span class="fa fa-user "></span> <span class="label btn-info follower-notification-num" id="main-follower-notification-num">0</span>
                        </a>
                        <ul id="followers-notification-list" class="dropdown-menu notification-list " role="menu"></ul>
                    </li>

                </ul>
            }
        </div>
    </div>
</nav>
