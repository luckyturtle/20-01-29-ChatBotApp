@{
    Layout = "_Layout";
}



<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>User Information</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="col-sm-12">
                        <table id="userProfile" class="table table-striped table-bordered dt-responsive" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Gender</th>
                                    <th>Birth Date</th>
                                    <th>Phone</th>
                                    <th>Regestration Date</th>
                                    <th>Follwers</th>
                                    <th>Viewers</th>
                                    @*<th>Description</th>
                                        <th>Social Link</th>*@
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts {

    <script type="text/javascript">

    $(document).ready(function () {
        $("#userProfile").DataTable({
            dom: 'lBfrtip',
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "ajax": {
                "url": "@Url.Content("~")/Admin/UserProfiles/LoadData",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
            "columns": [
                { "data": "id", "name": "Id", "autoWidth": true },
                { "data": "userName", "name": "UserName", "autoWidth": true },
                { "data": "email", "name": "Email", "autoWidth": true },
                { "data": "gender", "name": "Gender", "autoWidth": true },
                { "data": "birthDate", "name": "BirthDate", "autoWidth": true },
                { "data": "phoneNumber", "name": "PhoneNumber", "autoWidth": true },
                { "data": "regestrationDate", "name": "RegestrationDate", "autoWidth": true },
                { "data": "numberOfFollwer", "name": "NumberOfFollwer", "autoWidth": true },
                { "data": "numberOfViewer", "name": "NumberOfViewer", "autoWidth": true },
                //{ "data": "description", "name": "Description", "autoWidth": true },
                //{ "data": "socialLink", "name": "SocialLink", "autoWidth": true },
            ]

        });
    });


    </script>
}